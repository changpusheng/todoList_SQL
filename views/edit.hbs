<form action="/todos/{{ todos.id }}?_method=PUT" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="isDone" {{#if todos.isDone }} checked {{/if}}>
      </div>
    </div>
    <input class="form-control" type="text" placeholder="name" name="name" value="{{ todos.name }}" required>
    <div class="input-group-append">
      <button type="submit" class="btn btn-primary">更改</button>
    </div>
  </div>
  {{>message}}
</form>